<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="logapp">
        <description>This is the development application database</description>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>edu.tsystems.javaschool.logapp.api.entities.Truck</class>


        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/log_app"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="postgres"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL94Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>

<!--            <property name="hibernate.archive.autodetection" value="class"/>-->
        </properties>


    </persistence-unit>
</persistence>